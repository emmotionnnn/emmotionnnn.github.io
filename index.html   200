    <script>
        let musicModeActive = false;
        const images = [
            'https://shop.udiscovermusic.com/cdn/shop/products/Frank-Ocean---Channel-Orange-Explicit-1CD.png?v=1639415697',
            'https://www.pngplay.com/wp-content/uploads/7/Clef-Note-PNG-Free-File-Download.png',
            'https://www.goldenchill.com/wp-content/uploads/2022/04/travislogo.png',
            'https://png.pngtree.com/png-clipart/20231015/original/pngtree-vintage-record-player-vector-illustration-isolated-on-white-png-image_13302577.png'
        ];

        function showMoreInfo() {
            document.getElementById('moreInfoBox').style.display = 'block';
        }

        function closeMoreInfo() {
            document.getElementById('moreInfoBox').style.display = 'none';
        }

        function getRandomPosition() {
            const x = Math.random() * window.innerWidth;
            const y = Math.random() * window.innerHeight;
            return { x, y };
        }

        function createRandomImages() {
            images.forEach(image => {
                const img = document.createElement('img');
                img.src = image;
                img.classList.add('random-image');
                const { x, y } = getRandomPosition();
                img.style.left = `${x}px`;
                img.style.top = `${y}px`;
                document.body.appendChild(img);
            });
        }

        function toggleMusicMode() {
            if (musicModeActive) {
                // Vuelve al estado normal
                document.body.style.backgroundColor = "#87CEEB";  // Fondo celeste
                document.getElementById('mainContent').classList.remove('hidden');
                document.querySelector('.don-pollo').classList.remove('hidden');
                musicModeActive = false;
                // Elimina las imÃ¡genes aleatorias
                const randomImages = document.querySelectorAll('.random-image');
                randomImages.forEach(img => img.remove());
            } else {
                // Entra al modo mÃºsica
                document.body.style.backgroundColor = "pink";  // Fondo rosa
                document.getElementById('mainContent').classList.add('hidden');
                document.querySelector('.don-pollo').classList.add('hidden');
                createRandomImages();
                musicModeActive = true;
            }
        }
    </script>
